{
  "name": "@pixel-io/styles",
  "version": "0.3.0",
  "files": [
    "dist"
  ],
  "main": "./dist/style.css",
  "module": "./dist/style.css",
  "exports": {
    "./src/": "./src/",
    ".": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "type": "commonjs",
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "check": "pnpm check:lint && pnpm check:stylelint && pnpm check:format",
    "check:lint": "eslint ./src/**/*.{js,ts}",
    "check:stylelint": "stylelint ./src/**/*.scss",
    "check:format": "prettier --check ./src/**/*.{js,html,ts,scss,css,mdx}",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@pixel-io/eslint-config": "workspace:*",
    "@pixel-io/prettier-config": "workspace:*",
    "eslint": "^8.43.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "sass": "^1.63.4",
    "stylelint": "^15.8.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-stylelint": "^4.3.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
