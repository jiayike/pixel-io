{
  "name": "@pixel-io/components",
  "version": "0.2.1",
  "type": "module",
  "main": "dist/index.es.js",
  "exports": {
    ".": "./dist/index.es.js",
    "./dist/": "./dist/"
  },
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "check": "pnpm check:lint && pnpm check:format",
    "check:lint": "eslint ./src/**/*.{js,ts}",
    "check:format": "prettier --list-different ./src/**/*.{js,html,ts,scss,css,mdx}",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@pixel-io/styles": "workspace:*",
    "lit": "^2.6.1"
  },
  "devDependencies": {
    "@open-wc/lit-helpers": "^0.5.1",
    "@open-wc/testing-helpers": "^2.2.0",
    "@testing-library/user-event": "^14.4.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitest/coverage-c8": "^0.29.2",
    "eslint": "^8.36.0",
    "eslint-plugin-lit": "^1.8.2",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "sass": "^1.59.2",
    "shadow-dom-testing-library": "^1.10.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.2"
  }
}
