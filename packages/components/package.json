{
  "name": "@pixel-io/components",
  "version": "0.3.0",
  "type": "module",
  "main": "dist/index.es.js",
  "exports": {
    ".": "./dist/index.es.js",
    "./dist/": "./dist/"
  },
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build && mv ./types ./dist",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "check": "pnpm check:lint && pnpm check:format",
    "check:lint": "eslint ./src/**/*.{js,ts}",
    "check:format": "prettier --check ./src/**/*.{js,html,ts,scss,css,mdx}",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@pixel-io/styles": "workspace:*",
    "lit": "^2.7.4"
  },
  "devDependencies": {
    "@open-wc/lit-helpers": "^0.5.1",
    "@open-wc/testing-helpers": "^2.2.1",
    "@pixel-io/eslint-config": "workspace:*",
    "@pixel-io/prettier-config": "workspace:*",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@vitest/coverage-c8": "^0.31.0",
    "eslint": "^8.40.0",
    "eslint-plugin-lit": "^1.8.3",
    "jsdom": "^22.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "shadow-dom-testing-library": "^1.10.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vitest": "^0.31.0"
  }
}
