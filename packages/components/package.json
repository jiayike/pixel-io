    "test:watch": "vitest",
    "check": "pnpm check:lint && pnpm check:format",
    "check:lint": "eslint ./src/**/*.{js,ts}",
    "check:format": "prettier --check ./src/**/*.{js,html,ts,scss,css,mdx}",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@pixel-io/styles": "workspace:*",
    "lit": "^2.7.0"
  },
  "devDependencies": {
    "@open-wc/lit-helpers": "^0.5.1",
    "@open-wc/testing-helpers": "^2.2.0",
    "@testing-library/user-event": "^14.4.3",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitest/coverage-c8": "^0.29.8",
    "eslint": "^8.37.0",
    "eslint-plugin-lit": "^1.8.2",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "sass": "^1.60.0",
    "shadow-dom-testing-library": "^1.10.0",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vitest": "^0.29.8"
  }
