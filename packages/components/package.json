{
  "name": "@pixel-io/components",
  "version": "0.4.2",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./customElements": "./dist/custom-elements.json",
    "./*": "./dist/*"
  },
  "customElements": "./dist/custom-elements.json",
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "pnpm clean && tsc -b tsconfig.build.json && vite build",
    "clean": "rm -rf ./dist && rm -rf ./types",
    "cy:open": "cypress open",
    "cy:run": "cypress run --component --browser chrome",
    "test": "pnpm cy:run",
    "test:watch": "pnpm cy:open && pnpm cy:run",
    "check": "pnpm check:lint && pnpm check:format",
    "check:lint": "eslint ./src/**/*.{js,ts}",
    "check:format": "prettier --write ./src/**/*.{js,html,ts,scss,css,mdx}",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@pixel-io/styles": "workspace:*",
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@open-wc/lit-helpers": "^0.7.0",
    "@pixel-io/eslint-config": "workspace:*",
    "@pixel-io/prettier-config": "workspace:*",
    "cypress": "^13.7.1",
    "cypress-ct-lit": "^0.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-lit": "^1.11.0",
    "fast-glob": "^3.3.2",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.72.0",
    "typescript": "^5.4.3",
    "vite": "^5.2.7",
    "vite-plugin-cem": "^0.8.0"
  }
}
