{
  "name": "@pixel-io/components",
  "version": "0.2.1",
  "type": "module",
  "main": "dist/index.es.js",
  "exports": {
    ".": "./dist/index.es.js",
    "./dist/": "./dist/"
  },
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
